pipeline {
    agent any
	parameters {
        choice choices: ['Development', 'Certification', 'Staging', 'Production'], description: 'Please select the environment?', name: 'ENVIRONMENT'
}
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
		stage('Workspace CleanUp'){
		    steps{
			    sh '''
				   echo "Cleaning the Jenkins workspace"
				'''
				cleanWs()
            }
		}
	}
}

pipeline {
    agent any
	environment {
	     SECRET_VALUE = credentials('jenkins-aws-creds')
	}
    stages {
        stage('Ansible Version Checking') {
            steps {
                sh '''
                   echo 'Starts checking ansible'
                   ansible --version
                   ansible-playbook --version
                   ansible-galaxy --version
                '''
            }
        }
    }
}
